<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdrITADAO">
		<resultMap id="adrITAVO" type="egovframework.ictway.yja.service.AdrITAVO">
		<result property="adbkSn" column="adbk_sn"/>	<!-- 주소록일련번호 -->
		<result property="userNm" column="user_nm"/>	<!-- 사용자명칭 -->
		<result property="brthdy" column="brthdy"/>	<!-- 생년월일 -->
		<result property="sexdstnCode" column="sexdstn_code"/>	<!-- 성별코드 -->
		<result property="adres" column="adres"/>	<!-- 주소 -->
		<result property="detailAdres" column="detail_adres"/>	<!-- 상세주소 -->
		<result property="moblphonNo" column="moblphon_no"/>	<!-- 휴대폰번호 -->
		<result property="emailaddr" column="emailaddr"/>	<!-- 이메일주소 -->
		<result property="memo" column="memo"/>	<!-- 메모 -->
		<result property="groupNm" column="group_nm"/>	<!-- 그룹명칭 -->
		<result property="cmpnyNm" column="cmpny_nm"/>	<!-- 회사명칭 -->
		<result property="deptNm" column="dept_nm"/>	<!-- 부서명칭 -->
		<result property="clsfNm" column="clsf_nm"/>	<!-- 직급명칭 -->
		<result property="bkmkAt" column="bkmk_at"/>	<!-- 즐겨찾기여부 -->
		<result property="photoNm" column="photo_nm"/>	<!-- 사진명칭 -->
		<result property="photoCours" column="photo_cours"/>	<!-- 사진경로 -->
		<result property="photoExtsnNm" column="photo_extsn_nm"/>	<!-- 사진확장자명칭 -->
		<result property="registDt" column="regist_dt"/>	<!-- 등록일시 -->
		<result property="updtDt" column="updt_dt"/>	<!-- 수정일시 -->
		<result property="registUserId" column="regist_user_id"/>	<!-- 등록사용자아이디 -->
		<result property="registUserNm" column="regist_user_nm"/>	<!-- 등록사용자명칭 -->
		<result property="deleteAt" column="delete_at"/>	<!-- 삭제여부 -->
	</resultMap>

	<select id="selectAdrITAList" parameterType="egovframework.ictway.yja.service.AdrITAVO" resultType="egovMap">
		SELECT
			adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,moblphon_no
			,emailaddr
			,memo
			,group_nm
			,cmpny_nm
			,dept_nm
			,clsf_nm
			,bkmk_at
			,photo_nm
			,photo_cours
			,photo_extsn_nm
			,regist_dt
			,updt_dt
			,regist_user_nm
			,delete_at
			,regist_user_id
		FROM yja.address_info
		WHERE delete_at = 'N'
		ORDER BY 1 DESC
		LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
	</select>

	<select id="selectAdrITAListCnt" parameterType="egovframework.ictway.yja.service.AdrITAVO" resultType="java.lang.Integer">
		SELECT
			COUNT(*)
		FROM yja.address_info
		WHERE delete_at = 'N'
	</select>

	<select id="selectAdrITADetail" parameterType="egovframework.ictway.yja.service.AdrITAVO" resultMap="adrITAVO">
		SELECT
			adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,moblphon_no
			,emailaddr
			,memo
			,group_nm
			,cmpny_nm
			,dept_nm
			,clsf_nm
			,bkmk_at
			,photo_nm
			,photo_cours
			,photo_extsn_nm
			,regist_dt
			,updt_dt
			,regist_user_nm
			,delete_at
			,regist_user_id
		FROM yja.address_info
		WHERE delete_at = 'N'
			AND adbk_sn = #{adbkSn}
	</select>

	<insert id="insertAdrITAAct" parameterType="egovframework.ictway.yja.service.AdrITAVO">
		INSERT INTO yja.address_info (
			adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,moblphon_no
			,emailaddr
			,memo
			,group_nm
			,cmpny_nm
			,dept_nm
			,clsf_nm
			,bkmk_at
			,photo_nm
			,photo_cours
			,photo_extsn_nm
			,regist_user_nm
			,regist_user_id
		) VALUES(
			#{adbkSn}
			,#{userNm}
			,#{brthdy}
			,#{sexdstnCode}
			,#{adres}
			,#{detailAdres}
			,#{moblphonNo}
			,#{emailaddr}
			,#{memo}
			,#{groupNm}
			,#{cmpnyNm}
			,#{deptNm}
			,#{clsfNm}
			,#{bkmkAt}
			,#{photoNm}
			,#{photoCours}
			,#{photoExtsnNm}
			,#{registUserNm}
			,#{registUserId}
		)
	</insert>

	<update id="updateAdrITAAct" parameterType="egovframework.ictway.yja.service.AdrITAVO">
		UPDATE yja.address_info
		SET 
			user_nm = #{userNm}
			,brthdy = #{brthdy}
			,sexdstn_code = #{sexdstnCode}
			,adres = #{adres}
			,detail_adres = #{detailAdres}
			,moblphon_no = #{moblphonNo}
			,emailaddr = #{emailaddr}
			,memo = #{memo}
			,group_nm = #{groupNm}
			,cmpny_nm = #{cmpnyNm}
			,dept_nm = #{deptNm}
			,clsf_nm = #{clsfNm}
			,bkmk_at = #{bkmkAt}
			,photo_nm = #{photoNm}
			,photo_cours = #{photoCours}
			,photo_extsn_nm = #{photoExtsnNm}
			,updt_dt = now()
		WHERE adbk_sn = #{adbkSn}
	</update>
	
	<update id="deleteAdrITAAct" parameterType="egovframework.ictway.yja.service.AdrITAVO">
		UPDATE yja.address_info
		SET
			 delete_at = 'Y'
			,updt_dt = now()
		WHERE
			delete_at = 'N'
			AND adbk_sn = #{adbkSn}
	</update>
	
</mapper>