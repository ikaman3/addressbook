<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdrPHHDAO">
	<resultMap id="adrPhhVO" type="egovframework.ictway.phh.service.AdrPHHVO">
		<result property="adbkSn" column="adbk_sn"/>	<!-- 주소록일련번호 -->
		<result property="userNm" column="user_nm"/>	<!-- 사용자명칭 -->
		<result property="brthdy" column="brthdy"/>	<!-- 생년월일 -->
		<result property="sexdstnCode" column="sexdstn_code"/>	<!-- 성별코드 -->
		<result property="adres" column="adres"/>	<!-- 주소 -->
		<result property="detailAdres" column="detail_adres"/>	<!-- 상세주소 -->
		<result property="mbtlnum" column="mbtlnum"/>	<!-- 휴대폰번호 -->
		<result property="emailaddr" column="emailaddr"/>	<!-- 이메일주소 -->
		<result property="memo" column="memo"/>	<!-- 메모 -->
		<result property="photoOrignlFlpth" column="photo_orignl_flpth"/>	<!-- 사진원본파일경로 -->
		<result property="photoScrtyFlpth" column="photo_scrty_flpth"/>	<!-- 사진보안파일경로 -->
		<result property="photoExtsnNm" column="photo_extsn_nm"/>	<!-- 사진확장자명칭 -->
		<result property="adresGroupCode" column="adres_group_code"/>	<!-- 주소록그룹코드 -->
		<result property="cmpnyNm" column="cmpny_nm"/>	<!-- 회사명칭 -->
		<result property="cmpnyTeamNm" column="cmpny_team_nm"/>	<!-- 회사팀명칭 -->
		<result property="cmpnyClsfNm" column="cmpny_clsf_nm"/>	<!-- 회사직급명칭 -->
		<result property="bkmkAt" column="bkmk_at"/>	<!-- 즐겨찾기여부 -->
		<result property="adbkWrterNm" column="adbk_wrter_nm"/>	<!-- 주소록작성자명칭 -->
		<result property="adbkCreatDt" column="adbk_creat_dt"/>	<!-- 주소록생성일시 -->
		<result property="adbkUpdtDt" column="adbk_updt_dt"/>	<!-- 주소록수정일시 -->
		<result property="adbkDeleteAt" column="adbk_delete_at"/>	<!-- 주소록삭제여부 -->
	</resultMap>



	<select id="selectAddressInfoList" parameterType="egovframework.ictway.phh.service.AdrPHHVO" resultType="egovMap">
		SELECT
			 adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,mbtlnum
			,emailaddr
			,memo
			,photo_orignl_flpth
			,photo_scrty_flpth
			,photo_extsn_nm
			,adres_group_code
			,cmpny_nm
			,cmpny_team_nm
			,cmpny_clsf_nm
			,bkmk_at
			,adbk_wrter_nm
			,adbk_creat_dt
			,adbk_updt_dt
			,adbk_delete_at
		FROM phh.address_info
<!-- 		WHERE  -->
		ORDER BY 1 DESC
		LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
	</select>



	<select id="selectAddressInfoListCnt" parameterType="egovframework.ictway.phh.service.AdrPHHVO" resultType="java.lang.Integer">
		SELECT
			COUNT(*)
		FROM phh.address_info
	<!-- 	WHERE  -->
	</select>



	<select id="selectAddressInfoDetail" parameterType="egovframework.ictway.phh.service.AdrPHHVO" resultMap="adrPhhVO">
		SELECT
			 adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,mbtlnum
			,emailaddr
			,memo
			,photo_orignl_flpth
			,photo_scrty_flpth
			,photo_extsn_nm
			,adres_group_code
			,cmpny_nm
			,cmpny_team_nm
			,cmpny_clsf_nm
			,bkmk_at
			,adbk_wrter_nm
			,adbk_creat_dt
			,adbk_updt_dt
			,adbk_delete_at
		FROM phh.address_info
		<!-- WHERE  -->
	</select>



	<insert id="insertAddressInfoAct" parameterType="egovframework.ictway.phh.service.AdrPHHVO">
		INSERT INTO phh.address_info (
			 adbk_sn
			,user_nm
			,brthdy
			,sexdstn_code
			,adres
			,detail_adres
			,mbtlnum
			,emailaddr
			,memo
			,photo_orignl_flpth
			,photo_scrty_flpth
			,photo_extsn_nm
			,adres_group_code
			,cmpny_nm
			,cmpny_team_nm
			,cmpny_clsf_nm
			,bkmk_at
			,adbk_wrter_nm
			,adbk_creat_dt
			,adbk_updt_dt
			,adbk_delete_at
		) VALUES(
			 #{adbkSn}
			,#{userNm}
			,#{brthdy}
			,#{sexdstnCode}
			,#{adres}
			,#{detailAdres}
			,#{mbtlnum}
			,#{emailaddr}
			,#{memo}
			,#{photoOrignlFlpth}
			,#{photoScrtyFlpth}
			,#{photoExtsnNm}
			,#{adresGroupCode}
			,#{cmpnyNm}
			,#{cmpnyTeamNm}
			,#{cmpnyClsfNm}
			,#{bkmkAt}
			,#{adbkWrterNm}
			,#{adbkCreatDt}
			,#{adbkUpdtDt}
			,#{adbkDeleteAt}
		)
	</insert>



	<update id="updateAddressInfoAct" parameterType="egovframework.ictway.phh.service.AdrPHHVO">
		UPDATE phh.address_info
		SET 
			 adbk_sn = #{adbkSn}
			,user_nm = #{userNm}
			,brthdy = #{brthdy}
			,sexdstn_code = #{sexdstnCode}
			,adres = #{adres}
			,detail_adres = #{detailAdres}
			,mbtlnum = #{mbtlnum}
			,emailaddr = #{emailaddr}
			,memo = #{memo}
			,photo_orignl_flpth = #{photoOrignlFlpth}
			,photo_scrty_flpth = #{photoScrtyFlpth}
			,photo_extsn_nm = #{photoExtsnNm}
			,adres_group_code = #{adresGroupCode}
			,cmpny_nm = #{cmpnyNm}
			,cmpny_team_nm = #{cmpnyTeamNm}
			,cmpny_clsf_nm = #{cmpnyClsfNm}
			,bkmk_at = #{bkmkAt}
			,adbk_wrter_nm = #{adbkWrterNm}
			,adbk_creat_dt = #{adbkCreatDt}
			,adbk_updt_dt = #{adbkUpdtDt}
			,adbk_delete_at = #{adbkDeleteAt}
	<!-- 	WHERE = #{} -->
	</update>
	
</mapper>